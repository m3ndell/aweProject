@model aweProject.Models.SiteManagement

@{
    ViewData["Title"] = "Baustelle bearbeiten";
}


<div id="OrderCard">
    <div class="card border-dark" id="SiteFormPartialCard">
        <div class="card-header pl-3 pb-0 pt-2">
            <h4>Bearbeiten</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Beschreibung</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="ManagerId" class="control-label">Baustellenleiter</label>
                            <input asp-for="ManagerId" value="@Model.ManagerId" class="form-control" />
                            <span asp-validation-for="ManagerId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Speichern" class="btn btn-outline-dark" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Zurück zur Liste</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
