@model aweProject.Models.Ressources

<form id="row_New">
    <div class="form-row border-bottom border-secondary align-items-start pt-1 pb-1 pl-0 pr-1">
        <div class="col-2 pl-0">
            <input type="text" asp-for="Name" placeholder="Name" class="form-control" />
            <small><span asp-validation-for="Name" class="text-danger"></span></small>
        </div>
        <div class="col-2 pl-0">
            <input type="text" list="types" name="type" asp-for="Type" placeholder="Typ" class="form-control" />
            <datalist id="types">
                <option value="Werkzeug" />
                <option value="Fahrzeug" />
                <option value="Hilfsstoffe" />
                <option value="Schutzkleidung" />
                <option value="Zubehör" />
            </datalist>
            @*<input type="text" asp-for="Type" class="form-control" />*@
            <small><span asp-validation-for="Type" class="text-danger"></span></small>
        </div>
        <div class="col-2 pl-0">
            <input type="text" asp-for="BuyDate" placeholder="Kaufdatum" class="form-control" />
            <small><span asp-validation-for="BuyDate" class="text-danger"></span></small>
        </div>
        <div class="col-2 pl-0">
            <input type="text" asp-for="NextMaintenance" placeholder="Nächste Wartung" class="form-control" />
            <small><span asp-validation-for="NextMaintenance" class="text-danger"></span></small>
        </div>
        <div hidden class="col-2 pl-0">
            <input type="text" asp-for="Standort" value="Lager" class="form-control" />
            <small><span asp-validation-for="Standort" class="text-danger"></span></small>
        </div>
        <div class="col-2">
            <button type="button" class="btn btn-outline-dark" onclick="Insert()"><i class="fas fa-check fa-fw"></i></button>
            <button type="button" class="btn btn-outline-dark" onclick="CancelCreate()"><i class="fas fa-times fa-fw"></i></button>
        </div>
        @Html.AntiForgeryToken()
    </div>

    <script>
        $("#row_New input[name='BuyDate']").datepicker({
            uiLibrary: 'bootstrap4',
            format: 'dd-mmm-yyyy',
            defaultDate: Date.now()
        });

        $("#row_New input[name='NextMaintenance']").datepicker({
            uiLibrary: 'bootstrap4',
            format: 'dd-mmm-yyyy',
            defaultDate: Date.now()
        });
    </script>
</form>
