@model aweProject.Models.UserRole;

<div id="OrderCard">
    <div class="card border-dark" id="SiteFormPartialCard">
        <div class="card-header pl-3 pb-0 pt-2">
            <h4>Rollen bearbeiten</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class=" form-group">
                    <input type="hidden" asp-for="@Model.applicationUser.Id"  />
                    <label asp-for="@Model.applicationUser.Name">
                        Name :    @Model.applicationUser.Name
                    </label>
                </div>
                <div class="form-group">
                    @for (int i = 0; i< Model.ApplicationRoles.Count; i++)
                    {
                        <ul style="list-style-type: none">
                            <li>
                                <input type="hidden" asp-for="@Model.ApplicationRoles[i].Value" />
                                <input asp-for="@Model.ApplicationRoles[i].Selected" />@Model.ApplicationRoles[i].Text
                            </li>
                        </ul>
                        
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Speichern" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

