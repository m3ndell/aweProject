@page
@model LoginModel

@{
    ViewData["Title"] = "Einloggen";
}

<style>
    body { background-image: url("/images/login.jpg"); background-size: cover; }
</style>

<h2 style="text-align: center">@ViewData["Title"]</h2>
<div class="row justify-content-center">
    <div class="login-row">
        <section>
            <form method="post" class="login-form">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Passwort</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Daten merken?
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-dark" onclick="window.location = '@Url.Action("Index", "Home")'">Einloggen</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./ForgotPassword">Passwort vergessen?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Als neuer Nutzer registrieren?</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}